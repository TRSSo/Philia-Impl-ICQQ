{
  "name": "philia-impl-icqq",
  "version": "0.0.1",
  "description": "菲莉娅 ICQQ 实现端",
  "license": "LGPL-3.0",
  "author": "TimeRainStarSky",
  "type": "module",
  "main": "lib/main.js",
  "scripts": {
    "lint": "oxlint -c ../../.oxlintrc.json --fix src && biome check --write src",
    "compile": "rm -rf lib/* && tsc",
    "minify": "node ../../mod/oxc-minify lib",
    "build": "pnpm lint && pnpm compile && pnpm minify"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^24.2.1",
    "oxc-minify": "^0.81.0",
    "oxlint": "^1.11.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "icqq": "npm:@icqqjs/icqq",
    "philia": "workspace:^"
  },
  "imports": {
    "#*": "./lib/*/index.js",
    "#*.js": "./lib/*.js"
  },
  "exports": {
    ".": "./lib/index.js",
    "./*": "./lib/*/index.js",
    "./*.js": "./lib/*.js",
    "./package.json": "./package.json"
  }
}
